{
	"name": "jfr-blog",
	"version": "1.0.0",
	"description": "José Félix Ribas - Periódico Escolar",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"api": "nodemon index.js --ignore client/**",
		"client": "cd client && npm run dev",
		"api-install": "npm install",
		"client-install": "cd client && npm install",
		"install-all": "concurrently \"npm run api-install\" \"npm run client-install\"",
		"dev": "concurrently \"npm run api\" \"npm run client\"",
		"render-build": "npm install && cd client && npm install && npm run build"
	},
	"keywords": [
		"blog",
		"educative",
		"mongodb",
		"react",
		"js",
		"node",
		"express"
	],
	"author": "Keving Andrades",
	"license": "ISC",
	"dependencies": {
		"concurrently": "^8.2.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"mongoose": "^7.3.1",
		"morgan": "^1.10.0"
	},
	"devDependencies": {
		"nodemon": "^2.0.22"
	}
}
